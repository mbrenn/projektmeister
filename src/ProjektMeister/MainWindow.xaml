<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:DatenMeister.WPF.Controls;assembly=DatenMeister.WPF" x:Class="ProjektMeister.MainWindow"
        Title="Projekt Meister" Height="350" Width="525" Initialized="Window_Initialized">
    <Grid>
        <TabControl >
            <TabItem Header="Persons">
                <Grid Background="#FFE5E5E5">
                    <Controls:EntityTableControl x:Name="tablePersons"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tasks">
                <Grid Background="#FFE5E5E5">
                    <Controls:EntityTableControl x:Name="tableTasks"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
